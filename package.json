{
  "name": "odsp-memory-skill",
  "version": "0.0.3",
  "description": "Claude Code skill for persistent memory using OneDrive local sync",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "odsp-memory": "dist/index.js",
    "odsp-memory-mcp": "dist/mcp-server.js"
  },
  "files": [
    "dist",
    "skill.md",
    "README.md",
    ".claude-plugin",
    ".mcp.json",
    "skills",
    "commands",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrick-rodgers/claude-onedrive-memory.git"
  },
